{
  "name": "asset-metadata-tool",
  "version": "1.0.0",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "electron:dev": "set NODE_ENV=development && electron .",
    "build": "vite build",
    "build:electron": "electron-builder --dir",
    "package": "electron-packager . AssetMetadataTool --platform=win32 --arch=x64 --out=dist-packaged --overwrite --asar --icon=public/icon.ico"
  },
  "dependencies": {
    "@react-three/drei": "^9.92.0",
    "@react-three/fiber": "^8.15.0",
    "lucide-react": "^0.300.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-packager": "^17.1.2",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.assetmanagement.tool",
    "productName": "Asset Metadata Tool",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "dir"
    },
    "portable": {
      "artifactName": "${productName}.exe"
    }
  }
}
